extends ../layout

block content
  h1 New User
  form(action='/register',method="post")
    .row
      .col-xs-6
        .form-group
          span Username :
          input.form-control(type="text", name="username", placeholder="janedoeuser")
        .form-group
          span Password :
          input.form-control(type='password', name="password", placeholder='')
        .form-group
          span First Name :
          input.form-control(type="text", name="firstname", placeholder="Jane")
        .form-group
          span Last Name :
          input.form-control(type="text", name="lastname", placeholder="Doe")
        .form-group
          button.btn.btn-default(type='submit') Submit