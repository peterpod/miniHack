extends ../layout

block content
  if (currentUser)
    a.btn.btn-primary(href='/attractions/new') Add New Attraction
  if (!currentUser)
    p
      a(href='/login') Login or signup
      span &nbsp;to add your own attraction.
  h1= subPageName || pageName
  ul
    - each o in attractions
      li
        .row
          .col-xs-6
            = o.title
            = o.description
            = o.user_id
            form(action='/attractions/#{o._id}',method='post',enctype='application/x-www-form-urlencoded')
              input(type='hidden',value='DELETE',name='_method')
              button(type='submit').
                Delete
            p 
              a(href='/attractions/#{o._id}/edit') Edit
            p
              a(href='/attractions/#{o._id}') Show
          .col-xs-6
            if (o.photo)
              img(src=o.photo, alt=o.title ,width='300', height='300')